<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/styles.css" />
    <title>RFP System</title>
    <style>
      #top {
        display: flex;
        flex-direction: column;
        background-color: #b4d4ff;
        padding: 10px;
        height: 20vh;
      }
      #formFields {
        display: flex;
        flex-direction: column;
        padding: 3%;
      }
      #login {
        width: 50%;
        margin: auto;
        margin-top: 2%;
        background-color: white;
        border-radius: 3px;
      }
      body {
        background-color: #eef5ff;
      }
      h1,
      h3 {
        color: #176b87;
      }
      h1 {
        margin-top: auto;
        margin-bottom: auto;
      }
      h3 {
        margin-bottom: auto;
      }
      a {
        margin: auto;
      }
      .form-container {
        border: none;
      }
      #signupBtn {
        width: 100%;
        margin: auto;
        background-color: #176b87;
        border-radius: 6px;
        padding: 6px 10px;
        line-height: normal;
      }
    </style>
  </head>
  <body>
    <div id="login">
      <div id="top">
        <h1>Welcome to RFP System</h1>
        <h3>Register as Vendor</h3>
      </div>
      <div class="form-container">
        <form id="formFields">
          <label>First Name*</label>
          <input type="text" id="firstName" name="firstName" required />
          <label>Last Name*</label>
          <input type="text" id="lastName" name="lastName" required />
          <label>Email*</label>
          <input type="email" id="email" name="email" required />
          <label>Password*</label>
          <input type="password" id="password" name="password" required />
          <label>Confirm Password*</label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            required
          />
          <label>Revenue (Last 3 Years in Lacks)*</label>
          <input type="number" id="revenue" name="revenue" required />
          <label>No of Employees*</label>
          <input
            type="number"
            id="noOfEmployees"
            name="noOfEmployees"
            required
          />
          <label>GST No*</label>
          <input type="text" id="GSTNo" name="GSTNo" required />
          <label>PAN No*</label>
          <input type="text" id="PANNo" name="PANNo" required />
          <label>Phone No*</label>
          <input type="text" id="PhoneNo" name="PhoneNo" required />
          <label>Category*</label>
          <select id="selectField" name="selectedOption">
            <% documents.forEach(option => { %>
            <option value="<%= option.category %>">
              <%= option.category %>
            </option>
            <% }); %>
          </select>
          <button type="button" onclick="request()" id="signupBtn">
            Signup
          </button>
        </form>
      </div>
    </div>
    <script>
      function request() {
        const firstName = document.getElementById("firstName").value;
        const lastName = document.getElementById("lastName").value;
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;
        const confirmPassword =
          document.getElementById("confirmPassword").value;
        const revenue = document.getElementById("revenue").value;
        const numberOfEmployees =
          document.getElementById("noOfEmployees").value;
        const GSTno = document.getElementById("GSTNo").value;
        const PAN = document.getElementById("PANNo").value;
        const phoneNumber = document.getElementById("PhoneNo").value;
        const category = document.getElementById("selectField").value;

        console.log("HI");
        const formData = {
          firstName: firstName,
          lastName: lastName,
          email: email,
          password: password,
          confirmPassword: confirmPassword,
          revenue: revenue,
          numberOfEmployees: numberOfEmployees,
          GSTno: GSTno,
          PAN: PAN,
          phoneNumber: phoneNumber,
          category: category,
        };

        const url = "/addVendor";
        const options = {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(formData),
        };

        fetch(url, options)
          .then((response) => response.json())
          .then((data) => {
            console.log(data.message);
            if (data.message != "Otp sent.") alert(data.message);
            else {
              window.location.href = "/vendorEmailOTP";
            }
          })
          .catch((error) => {
            console.error("Error:", error);
          });
      }
    </script>
  </body>
</html>
